- title "Listing"

%div.title.float_left=h @listing.title

- unless @listing.price.blank?
  %div.title.float_right
    =h number_to_currency(@listing.price)
    - unless @listing.status.blank?
      %span.red= "- #{@listing.status.name}"

%div.clear.padding_bottom

- unless @listing.photos.empty?
  %div.photo_viewer.float_left
    %div
      .dropshadow_large
        = image_tag(params[:photo] || @listing.photos.first.photo.url(:medium), :id => "medium_photo")
    - @listing.photos.each do |p|
      .dropshadow_small.float_left
        = image_tag(p.photo.url(:small))
        
    %div.clear

- unless @listing.city.blank? && @listing.state.blank?
  %p
    %strong Location:
    = h @listing.city
    ,&nbsp;
    = h @listing.state
- unless @listing.bedrooms.blank?
  %p
    %strong Bedrooms:
    =h @listing.bedrooms
- unless @listing.bathrooms.blank?
  %p
    %strong Bathrooms:
    =h @listing.bathrooms
- unless @listing.description.blank?
