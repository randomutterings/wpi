- title "Listings"
     
- for listing in @listings
  .clear.padding_bottom
    - if listing.primary_photo.nil?
      .dropshadow_small.float_left.padding_right= link_to(image_tag("/photos/small/missing.png"), listing)
    - else
      .dropshadow_small.float_left.padding_right= link_to(image_tag(listing.primary_photo.photo.url(:small)), listing)
    - if authenticated?
      .float_right
        = link_to 'Edit', edit_listing_path(listing)
        = link_to 'Destroy', listing, :confirm => 'Are you sure?', :method => :delete
    %table{:cellspacing => 5}
      %tr
        %td= link_to listing.title, listing
      %tr
        %td
          List Price:
        %td= h number_to_currency(listing.price)
      %tr
        %td
          Location:
        %td
          = h listing.city
          ,&nbsp;
          = h listing.state
      %tr
        %td
          Bed/Bath:
        %td
          = h listing.bedrooms
          bedrooms
          = h listing.bathrooms
          bathrooms

- if authenticated?
  %p
    = link_to "New Listing", new_listing_path
    &nbsp;
    - if params[:all] == "true"
      = link_to "Only show listings displayed to public", listings_path
    - else
      = link_to "Show All", listings_path(:all => true)
