!!! Strict
%html{html_attrs}
  
  %head
    %title
      = h(yield(:title) || "Untitled")
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
    = stylesheet_link_tag 'application', 'mortgage_calculator_helper'
    = javascript :jquery, :application
    = yield(:head)
  
  %body
    #site
      #header
        =image_tag("/images/logo.png")

      - flash.each do |name, msg|
        = content_tag :div, msg, :id => "flash_#{name}"
      
      #container
        #menu
          = link_to "Home", page_permalink_path("home")
          = link_to "Listings", listings_url
          - if authenticated?
            = link_to "Agents", agents_url
            = link_to "Leads", leads_url
            = link_to "Pages", pages_url
            = link_to "Emails", emails_url
          - else
            = link_to "Admin", new_listing_url
        
          - @pages = Page.find(:all).each do |page|
            %div.menu=link_to page.name, page_permalink_path(page.permalink) unless page.permalink == "home"
          
        #main
          = yield
        
        #container_footer
        
      #footer