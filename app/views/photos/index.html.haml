- title "Photos"

%table
  %tr
    %th Photos
  - for photo in @photos
    %tr
      %td= link_to(image_tag(photo.photo.url(:small)), photo)
      %td
        = link_to photo.listing.title, photo
        - if photo.primary == true
          %br
          Primary Photo
        %br
        = link_to 'Edit', edit_photo_path(photo)
        = link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Photo", new_photo_path(:listing_id => params[:listing_id])
