- form_for @article, :html => {:multipart => true} do |f|
  = f.error_messages
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :content
    %br
    =f.text_area :content
  %p
    = f.label :background_image
    %br
    = f.file_field :background_image
  %p
    = image_tag(@article.background_image.url(:small)) unless @article.background_image.nil?
  %p
    = f.submit "Submit"
